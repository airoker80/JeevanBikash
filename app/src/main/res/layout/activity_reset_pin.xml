<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.harati.jeevanbikas.ResetPin.ResetPin"
    android:background="@color/pinbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/jbk_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner"
                    style="@style/SpinnerStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="@color/white"
                    android:entries="@array/language"
                    android:padding="8dp"></Spinner>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:src="@drawable/ic_applogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="CHANGE PIN"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Enter old Pin"
                android:textColor="@color/enrollColor"
                android:textColorHint="@color/enrollColor"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Enter new Pin"
                android:textColor="@color/enrollColor"
                android:textColorHint="@color/enrollColor"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Re - new Pin"
                android:textColor="@color/enrollColor"
                android:textColorHint="@color/enrollColor"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Enter OTP"
                android:textColor="@color/enrollColor"
                android:textColorHint="@color/enrollColor"
                android:textSize="@dimen/_12sdp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/shape_pin_btn"
                android:padding="@dimen/_12sdp"
                android:text="Send Link to Email"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

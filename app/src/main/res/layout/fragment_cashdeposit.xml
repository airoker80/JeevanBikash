<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/topPanel"
    android:orientation="vertical"
    android:background="@color/transparent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Sushan Shrestha"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/memberId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/memberIdnnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="3343434"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Branch"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/branchName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:background="@drawable/image_baground">
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/defaultprofile" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topPanel"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_8sdp">
                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Account No"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:maxLength="20"
                    android:id="@+id/accNo"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Withdrawl Amount"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:maxLength="6"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/withdrawlAmount"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:hint="Rs"
                    android:textColorHint="@color/white"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Agent Transaction Pin"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:maxLength="4"
                        android:textSize="@dimen/_10sdp"
                        android:id="@+id/agentPin"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/white"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Remarks"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/withdrawlRemark"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#F9B847"
            app:srcCompat="@drawable/ic_check" />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/crossIV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#c93e3b"
            app:srcCompat="@drawable/ic_error" />

    </LinearLayout>

    <!--
        <ImageView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#F9B847"
            android:clickable="true"
            app:srcCompat="@drawable/ic_check" />
    -->
</RelativeLayout>




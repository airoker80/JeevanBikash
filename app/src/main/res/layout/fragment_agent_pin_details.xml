<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="com.harati.jeevanbikas.CashDeposit.DepositDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_left" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image"
                    android:padding="8dp"
                    android:text="Cash Deposit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

                <Spinner
                    android:id="@+id/spinner"
                    style="@style/SpinnerStyle"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/white"
                    android:entries="@array/language"
                    android:padding="8dp"></Spinner>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                        android:id="@+id/depdetailsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Pratima Lama (Agent)"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/memberId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/depositCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="3343434"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Branch"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/depositBranch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/accNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Mobile No."
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/apd_mob_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="8dp"
                            android:text="3343434454"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:padding="@dimen/_4sdp"
                        android:background="@drawable/image_baground">
                        <ImageView
                            android:id="@+id/cd_search_photo"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/defaultprofile" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <!--
                        <com.harati.jeevanbikas.Helper.PinCodecom.harati.jeevanbikas.Helper.CGEditText
                            android:backgroundTint="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:digits="1234567890"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/white"
                            android:textIsSelectable="false"
                            android:textSize="20sp"/>
            -->
        <LinearLayout
            android:id="@+id/cd_before_conf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topPanel"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginTop="8dp">
            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deposit Amount"
                android:textColor="@color/white"/>
            <com.harati.jeevanbikas.Helper.CGEditText
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="6"
                android:backgroundTint="@color/white"
                android:id="@+id/deposoitAmt"
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textColor="@color/white"/>
            <com.harati.jeevanbikas.Helper.CGEditText
                android:inputType="text"
                android:maxLength="50"
                android:backgroundTint="@color/white"
                android:id="@+id/deposoitRemarks"
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent PIN"
                android:textColor="@color/white"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.harati.jeevanbikas.Helper.CGEditText
                    android:maxLines="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.harati.jeevanbikas.Helper.CGEditText
                    android:maxLines="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.harati.jeevanbikas.Helper.CGEditText
                    android:maxLines="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.harati.jeevanbikas.Helper.CGEditText
                    android:maxLines="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <EditText
                android:maxLines="1"
                android:inputType="numberPassword"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:maxLength="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/agentPin"/>


            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member PIN"
                android:textColor="@color/white"/>


                <com.harati.jeevanbikas.Helper.CGEditText
                    android:maxLines="1"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:backgroundTint="@color/white"
                    android:id="@+id/clientsPinEtxt"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>


            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:visibility="gone"
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/white"/>
            <com.harati.jeevanbikas.Helper.CGEditText
                android:maxLines="1"
                android:visibility="gone"
                android:inputType="number"
                android:maxLength="10"
                android:backgroundTint="@color/white"
                android:id="@+id/cd_mobile_no"
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9802796417"
                android:textColor="@color/white"/>
        </LinearLayout>


            <LinearLayout
                android:id="@+id/cd_gone_ll_txt_img"
                android:visibility="gone"
                android:layout_below="@+id/beforConfirmation"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:textColor="@color/white"
                    android:id="@+id/gone_cd_txt"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Are you Sure to withdraw Rs 1000"
                    android:textSize="@dimen/_30sdp" />
                <ImageButton
                    android:id="@+id/cd_speak_imgbtn"
                    android:layout_gravity="center"
                    android:padding="@dimen/_20sdp"
                    android:src="@drawable/ic_volume"
                    android:layout_below="@+id/gone_cw_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/agent_tick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#F9B847"
                android:clickable="true"
                app:srcCompat="@drawable/ic_check" />

            <ImageView
                android:id="@+id/demand_cross"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#c93e3b"
                android:clickable="true"
                app:srcCompat="@drawable/ic_error" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="com.harati.jeevanbikas.CashDeposit.DepositDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Sushan Shrestha"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/memberId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/memberIdnnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="3343434"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Branch"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/branchName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/accNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Account No"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/accNoDetails"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="8dp"
                            android:text="3343434454"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:padding="@dimen/_4sdp"
                        android:background="@drawable/image_baground">
                        <ImageView
                            android:id="@+id/depositUserPhoto"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/defaultprofile" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

<!--
            <com.harati.jeevanbikas.Helper.PinCodeEditText
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="20sp"/>
-->

            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter Clients pin number to proceed"
                android:textColor="@color/white"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <com.alimuzaffar.lib.pin.PinEntryEditText
                android:visibility="gone"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/white"
                android:text="1234"
                android:id="@+id/txt_pin_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:textSize="20sp">

            </com.alimuzaffar.lib.pin.PinEntryEditText>

            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter Client Code number to proceed"
                android:textColor="@color/white"/>

            <EditText
                android:maxLength="10"
                android:inputType="number"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:id="@+id/clientMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M0670001"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/demand_tick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#F9B847"
                android:clickable="true"
                app:srcCompat="@drawable/ic_check" />

            <ImageView
                android:id="@+id/demand_cross"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#c93e3b"
                android:clickable="true"
                app:srcCompat="@drawable/ic_error" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>

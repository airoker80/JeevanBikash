<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harati.jeevanbikas.MainPackage.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <RelativeLayout
        android:id="@+id/main_gone_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_8sdp">

        <LinearLayout
            android:id="@+id/jbk_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/spinner"
                    style="@style/SpinnerStyle"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/white"
                    android:entries="@array/language"
                    android:padding="8dp"></Spinner>

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/logoutTxt"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:padding="@dimen/_8sdp"
                    android:text="Logout"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:src="@drawable/ic_applogo"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/dashboardTitile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="JEEVAN BIKASH SAMAJ"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dashboard_icon_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/jbk_icon"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_30sdp"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <!--<FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>-->
</LinearLayout>

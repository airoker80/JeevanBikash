<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/topPanel"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_above="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Name"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/loanNameDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Sushan Shrestha"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/memberId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Member Id"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/loanDtCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="3343434"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Branch"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/ldOffice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Member Id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>


            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loan Type"
                android:textColor="#95AFBE"
                android:textSize="@dimen/_10sdp" />

            <Spinner
                android:id="@+id/spinner"
                style="@style/SpinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/white"
                android:entries="@array/loantype"></Spinner>

            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Loan Amount"
                android:textColor="#95AFBE"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:maxLength="6"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/loanAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColor="@color/white" />
            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Clients Pin"
                android:textColor="#95AFBE"
                android:textSize="@dimen/_10sdp" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/ld_clients_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:imeOptions="actionNext"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
            </android.support.design.widget.TextInputLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="32dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="1"
                   android:layout_margin="@dimen/_4sdp">
                   <ImageView
                       android:id="@+id/loanPhoto1"
                       android:layout_width="@dimen/_50sdp"
                       android:layout_height="@dimen/_50sdp"
                       android:src="@drawable/ic_new_file"/>
                   <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                       android:layout_marginLeft="8dp"
                       android:textColor="@color/white"
                       android:layout_width="wrap_content"
                       android:textSize="@dimen/_10sdp"
                       android:layout_height="wrap_content"
                       android:text="Upload Photo of Filled up Loan Demand Form"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="1"
                   android:layout_margin="@dimen/_4sdp">

                   <ImageView
                       android:id="@+id/loanPhoto2"
                       android:layout_width="@dimen/_50sdp"
                       android:layout_height="@dimen/_50sdp"
                       android:src="@drawable/ic_new_file" />
                   <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                       android:layout_marginLeft="8dp"
                       android:textColor="@color/white"
                       android:layout_width="wrap_content"
                       android:textSize="@dimen/_10sdp"
                       android:layout_height="wrap_content"
                       android:text="Upload Photo of Filled up Loan Demand Form"/>

               </LinearLayout>
           </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#F9B847"
            app:srcCompat="@drawable/ic_check" />
        <ImageView
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/crossIV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#c93e3b"
            app:srcCompat="@drawable/ic_error" />

    </LinearLayout>
</RelativeLayout>




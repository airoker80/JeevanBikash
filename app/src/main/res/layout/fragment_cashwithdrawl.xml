<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/topPanel"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/topPanel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_left" />

        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:padding="8dp"
            android:text="Fund Transfer"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <Spinner
            android:id="@+id/spinner"
            style="@style/SpinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/white"
            android:entries="@array/language"
            android:padding="8dp"></Spinner>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topPanel1"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Sushan Shrestha"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/memberId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/memberIdnnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="3343434"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Branch"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/branchName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Member Id"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/accNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:text="Mobile No"
                            android:textColor="#95AFBE"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />

                        <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                            android:id="@+id/dw_mob_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="8dp"
                            android:text="3343434454"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/image_baground"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:id="@+id/imgUser"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/defaultprofile" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/beforConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topPanel"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="4dp"
                android:visibility="visible">

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/withdrawlTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Withdrawl Amount"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/withdrawlAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="Rs"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/at_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Agent Pin"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />


                <EditText
                    android:id="@+id/agentPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/ct_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Member Pin"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/clientPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:id="@+id/remarks_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Remarks"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/withdrawlRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />

                <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Mobile No"
                    android:textColor="#95AFBE"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <com.harati.jeevanbikas.Helper.CGEditText
                    android:id="@+id/withrwal_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <com.alimuzaffar.lib.pin.PinEntryEditText
                    android:id="@+id/txt_pin_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="4"
                    android:text="1234"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    android:visibility="gone">

                </com.alimuzaffar.lib.pin.PinEntryEditText>

            </LinearLayout>

            <com.harati.jeevanbikas.Helper.CenturyGothicTextView
                android:textColor="@color/white"
                android:visibility="gone"
                android:id="@+id/gone_cw_txt"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/beforConfirmation"
                android:text="Are you Sure to withdraw Rs 1000"
                android:textSize="@dimen/_30sdp" />
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#F9B847"
            android:clickable="true"
            app:srcCompat="@drawable/ic_check" />

        <ImageView
            android:id="@+id/crossIV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#c93e3b"
            android:clickable="true"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_error" />

    </LinearLayout>

    <!--
        <ImageView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#F9B847"
            android:clickable="true"
            app:srcCompat="@drawable/ic_check" />
    -->
</RelativeLayout>



